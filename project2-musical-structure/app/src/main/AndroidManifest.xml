<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.yashshah.musicalstructure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecentlyPlayedActivity"
            android:label="@string/recently_played"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".LibraryActivity"
            android:label="@string/library"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".PlaylistsActivity"
            android:label="@string/your_playlists"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".NowPlayingActivity"
            android:label="@string/now_playing"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>